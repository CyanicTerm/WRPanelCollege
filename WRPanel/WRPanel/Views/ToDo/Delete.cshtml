@model ToDo
@{
    ViewData["Title"] = "Delete";
}


<form method="post">
    <input asp-for="Id" hidden />
    <div class="broder pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuń zadanie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="TaskName"></label>
            <input asp-for="TaskName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="IsImportant"></label>
            <input asp-for="IsImportant" disabled class="form-check" />
        </div>
        <div class="mb-3">
            <label asp-for="IsDone"></label>
            <input asp-for="IsDone" disabled class="form-check" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary">Wróć do listy</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}